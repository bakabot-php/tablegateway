<?xml version="1.0"?>
<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    cacheDirectory="/tmp/psalm"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <InvalidScope>
            <errorLevel type="suppress">
                <file name="./src/RowGatewayHydrator.php" />
            </errorLevel>
        </InvalidScope>

        <MixedArgument>
            <errorLevel type="suppress">
                <file name="./src/RowGatewayHydrator.php" />
            </errorLevel>
        </MixedArgument>

        <MixedArrayAssignment>
            <errorLevel type="suppress">
                <file name="./src/RowGatewayHydrator.php" />
            </errorLevel>
        </MixedArrayAssignment>

        <MixedAssignment>
            <errorLevel type="suppress">
                <file name="./src/RowGatewayHydrator.php" />
            </errorLevel>
        </MixedAssignment>

        <MixedPropertyAssignment>
            <errorLevel type="suppress">
                <file name="./src/RowGatewayHydrator.php" />
            </errorLevel>
        </MixedPropertyAssignment>

        <MixedPropertyFetch>
            <errorLevel type="suppress">
                <file name="./src/RowGatewayHydrator.php" />
            </errorLevel>
        </MixedPropertyFetch>
    </issueHandlers>
</psalm>
